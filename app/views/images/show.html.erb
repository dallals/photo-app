
<%- model_class = Image -%> 
 
<div class="page-header">
  <h1><%= @image.name %></h1>
  <div style="margin-top: -40px;" align="right">
  <%= link_to t('.back', :default => t("helpers.links.back")),
                images_path, :class => 'btn btn-info'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_image_path(@image), :class => 'btn btn-success' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                image_path(@image),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
</div>
</div>

<dl style="margin-left: -60px;" class="dl-horizontal">

   
    <dt></dt>
    <dd><%= image_tag(@image.picture.url, width: "900") if @image.picture? %></dd>
    <div style="width: 1050px; word-wrap: break-word;">
      <p><dd><%= @image.caption %> <p style="font-weight: bold"> Photo by: <%= @image.credit %></p></p></dd></p>
    </div>
  
</dl>
