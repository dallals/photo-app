<% if current_user %>
<h3>Welcome: <%= current_user.email %></h3>
<%- model_class = Image -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:picture) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><h4><%= link_to image.name, image_path(image) %></h4></td>
        <td><%= image_tag image.picture.url, width: "100" %></td>
        <td><%= time_ago_in_words(image.created_at) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_image_path(image), :class => 'btn btn-info btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      image_path(image),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_image_path,
            :class => 'btn btn-primary' %>
<% else %>
<div class="jumbotron">
	<h2>Welcome to the Photo Management App!</h2>
	<p class="lead">
		You'll love managing your Photos with our application. Sign up!
	</p>

</div>
<div class="row">

	<div class="plans clearfix">
		<div class="col-lg-3 col-lg-offset-3 plan">
			<h2>Premium Plan</h2>
			<div class="price pull-right">
				Price: $10
			</div>
			<div class="features">
				<ul>
					<li>Unlimited Image Uploads</li>
					<li>Responsive design</li>
					<li>Access anywhere</li>
				</ul>
			</div>
			<p>
			<%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
			</p>

		</div>

		<div class="col-lg-3 plan">

			<h2>Amaze Plan</h2>

				<div class="price pull-right">

				Price: $20

			</div>

		<div class="features">
			<ul>
				<li>Unlimited Image Uploads</li>
				<li>Responsive design</li>
				<li>Access anywhere</li>
				<li class='extra'>Unlimited projects</li>
			</ul>
		</div>
			<p><%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %></p>
		</div>
	</div>
</div>
<% end %>
